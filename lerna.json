{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "registry": "https://artifactoryspb.epam.com/artifactory/api/npm/epm-eag-npm/",

  "command": {
    "version": {
      "allowBranch": ["main", "4.x", "release*", "feat*", "fix*"],
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "changelogPreset": "conventionalcommits",
      "gitRemote": "origin",
      "loglevel": "verbose"
    },
    "run": {
      "stream": true
    },
    "publish": {
      "loglevel": "verbose"
    }
  },
  "ignoreChanges": [
    "**/*.md",
    "**/test/**",
    "docs"
  ]
}
